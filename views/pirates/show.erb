<h1>Pirate</h1>
<label for="pirate_name">Name: </label><%= @pirate.name %>
<br><br>
<label for="pirate_weight">Weight: </label> <%= @pirate.weight %>
<br><br>
<label for="pirate_height">Height: </label><%= @pirate.height %>
<br><br><br>

<h1>Ships</h1>
<%@ships.each_with_index do |ship, index|%>
  <h2>Ship <%= index+1 %></h2>
  <label for="ship_name_1">Name: </label><%= ship.name %>
  <br><br>
  <label for="ship_type_1">Type: </label> <%= ship.type %>
  <br><br>
  <label for="ship_booty_1">Booty: </label><%= ship.booty %>
  <br><br><br>
<% end %>